<application>
  <component name="LanguageInjectionConfiguration">
    <injection language="file-reference" injector-id="xml">
      <display-name>application/@name</display-name>
      <place><![CDATA[xmlAttribute().withLocalName(string().equalTo("name")).withNamespace(string().equalTo("http://schemas.android.com/apk/res/android")).withParent(xmlTag().withLocalName(string().equalTo("application")))]]></place>
    </injection>
  </component>
</application>